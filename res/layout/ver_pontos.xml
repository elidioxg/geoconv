<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_pontos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pontos_marcados" />

    <ListView
        android:id="@+id/lv_registro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_buttons" >
    </ListView>

    <RelativeLayout
        android:id="@+id/l_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/layout_principal">
         
        <ImageButton
            android:id="@+id/ib_exportar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/marcar_ponto"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

</RelativeLayout>