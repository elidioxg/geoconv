<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_pontos"
        android:layout_above="@+id/lv_registro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pontos_marcados"
        android:layout_margin="@dimen/margem"/>

    <ListView
        android:id="@+id/lv_registro"
        android:layout_above="@+id/l_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </ListView>

    <RelativeLayout
        android:id="@+id/l_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/ib_exportar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/marcar_ponto"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true"
            />

        <ImageButton
            android:id="@+id/ib_map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/mapa"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id="@+id/ib_excluir"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/apagar"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/elidioxg/Desenvolvimento/geoconv/app/src/main/res/layout/ver_pontos.xml -->