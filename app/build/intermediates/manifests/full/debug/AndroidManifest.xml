<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="geocodigos.geoconv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="geocodigos.geoconv.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="geocodigos.geoconv.VerPontos"
            android:parentActivityName="geocodigos.geoconv.MainActivity" >
        </activity>
        <activity
            android:name="geocodigos.geoconv.MarcarPontos"
            android:parentActivityName="geocodigos.geoconv.MainActivity" >
        </activity>
        <activity
            android:name="geocodigos.geoconv.ConverterCoordenadas"
            android:parentActivityName="geocodigos.geoconv.MainActivity" >
        </activity>
        <activity
            android:name="geocodigos.geoconv.kml.kmlActivity"
            android:label="@string/title_activity_kml"
            android:parentActivityName="geocodigos.geoconv.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="geocodigos.geoconv.MainActivity" />
        </activity>
    </application>

</manifest>