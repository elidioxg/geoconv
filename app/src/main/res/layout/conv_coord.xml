<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/lay_marcar"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/branco">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margem_grande"
                android:layout_marginBottom="@dimen/margem_grande"
                >

                <TextView
                    android:id="@+id/tvlongutm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/longitudeUtm"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margem"
                    />

                <TextView
                    android:id="@+id/tvlat"
                    android:layout_below="@+id/tvlongutm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margem"
                    />

                <EditText
                    android:id="@+id/etlat"
                    android:layout_below="@+id/tvlat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal|numberSigned"
                    android:layout_margin="@dimen/margem"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tvlong"
                    android:layout_below="@+id/etlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margem"
                    />

                <EditText
                    android:id="@+id/etlong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvlong"
                    android:inputType="numberDecimal|numberSigned"
                    android:layout_margin="@dimen/margem"
                    android:layout_centerHorizontal="true"
                    />

                <ImageButton
                    android:id="@+id/ib_latlonutm"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/etlong"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margem"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_utmll"
                android:layout_below="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande"
                android:layout_marginBottom="@dimen/margem_grande"
                android:background="@color/cinza_claro">

                <TextView
                    android:id="@+id/tv_converter"
                    android:text="@string/utmLongitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margem"
                    />

                <TextView
                    android:layout_below="@+id/tv_converter"
                    android:id="@+id/tvquadrante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quadrante"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margem"
                    />

                <EditText
                    android:layout_below="@+id/tvquadrante"
                    android:id="@+id/etquadrante"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_margin="@dimen/margem"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_below="@+id/etquadrante"
                    android:id="@+id/tvnorte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/norte"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"
                    android:layout_margin="@dimen/margem"
                    />

                <EditText
                    android:layout_below="@+id/tvnorte"
                    android:id="@+id/etnorte"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="number"
                    android:layout_margin="@dimen/margem"
                    />

                <TextView
                    android:id="@+id/tvleste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etnorte"
                    android:text="@string/leste"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margem"
                    />

                <EditText
                    android:layout_below="@+id/tvleste"
                    android:id="@+id/etleste"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="number"
                    android:layout_margin="@dimen/margem"
                    />

                <ImageButton
                    android:id="@+id/ib_utmlatlon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/etleste"
                    android:layout_margin="@dimen/margem"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_graus"
                android:layout_below="@+id/layout_utmll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande"
                android:layout_marginBottom="@dimen/margem_grande"
                >

                <TextView
                    android:id="@+id/tv_gms"
                    android:text="@string/conv_gms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margem"
                    />

                <RelativeLayout
                    android:id="@+id/layout_latgraus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margem_grande">

                    <TextView
                        android:id="@+id/tvlatitude"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/latitude"
                        android:layout_margin="@dimen/margem"
                        />

                    <RadioGroup
                        android:id="@+id/rg_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvlatitude"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_N"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margem_grande"
                            android:text="@string/N"
                            android:checked="true"
                            />

                        <RadioButton
                            android:id="@+id/rb_S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/S"
                            />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/etLatgraus"
                        android:layout_below="@+id/rg_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/grau"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_margin="@dimen/margem"
                        />

                    <EditText
                        android:id="@+id/etLatminutos"
                        android:layout_below="@+id/rg_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/min"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_margin="@dimen/margem"
                        android:layout_centerHorizontal="true"
                        />

                    <EditText
                        android:id="@+id/etLatsegundos"
                        android:layout_below="@+id/rg_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/seg"
                        android:layout_margin="@dimen/margem"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_longraus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_latgraus"
                    android:layout_margin="@dimen/margem_grande"
                    android:layout_marginBottom="@dimen/margem_grande">

                    <TextView
                        android:id="@+id/tvlongitude"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/longitude"
                        android:layout_margin="@dimen/margem"
                        />

                    <RadioGroup
                        android:id="@+id/rg_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvlongitude"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_E"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margem_grande"
                            android:text="@string/E"
                            android:checked="true"
                            />

                        <RadioButton
                            android:id="@+id/rb_W"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/W"
                            />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/etLongraus"
                        android:layout_below="@+id/rg_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/grau"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_margin="@dimen/margem"
                        />

                    <EditText
                        android:id="@+id/etLonminutos"
                        android:layout_below="@+id/rg_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/min"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_margin="@dimen/margem"
                        android:layout_centerHorizontal="true"
                        />

                    <EditText
                        android:id="@+id/etLonsegundos"
                        android:layout_below="@+id/rg_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/seg"
                        android:inputType="numberDecimal|numberSigned"
                        android:layout_margin="@dimen/margem"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/ib_graus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/layout_longraus"
                    android:layout_margin="@dimen/margem"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/lay_marcar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/preto">

        <ImageButton
            android:id="@+id/ib_limpar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/limpar"
            android:layout_alignParentLeft="true"
            />

        <ImageButton
            android:id="@+id/ib_marcar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/marcar_ponto"
            android:background="@mipmap/mapmarker"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>
