<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="OnItemClick"
    android:background="@color/branco">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/cb_ponto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_margin="@dimen/margem"
                android:layout_centerVertical="true"
                />


            <TextView
                android:id="@+id/tvregistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textSize="@dimen/fonteGrande"
                android:layout_margin="@dimen/margem"
                android:layout_below="@+id/tvhora"
                android:layout_toRightOf="@+id/cb_ponto"
                />

            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/descricao"
                android:textSize="@dimen/fonteNormal"
                android:layout_below="@+id/tvdata"
                android:layout_margin="@dimen/margem"
                android:layout_toRightOf="@+id/cb_ponto"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/tvhora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hora"
                android:textSize="@dimen/fonteNormal"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tvdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvregistro"
                android:text="data"
                android:textSize="@dimen/fonteNormal"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
