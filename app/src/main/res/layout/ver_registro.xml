<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_registro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/cinza"
        >

        <ImageButton
            android:id="@+id/ib_anterior"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margem_grande"
            />

        <TextView
            android:id="@+id/tv_registros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margem_grande"
            />

        <ImageButton
            android:id="@+id/ib_proximo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margem_grande"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande"
                >

                <TextView
                    android:id="@+id/tvRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registro"/>

                <EditText
                    android:id="@+id/etregistro"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvRegistro"
                    android:hint="@string/registro"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande">

                <TextView
                    android:id="@+id/tvDescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descricao"
                    />

                <EditText
                    android:id="@+id/etdescricao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvDescricao"
                    android:hint="@string/descricao"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande">

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hora"
                    />

                <EditText
                    android:id="@+id/etHora"
                    android:layout_toRightOf="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/hora"
                    />

                <TextView
                    android:id="@+id/tvData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data"
                    android:layout_toLeftOf="@+id/etData"
                    />

                <EditText
                    android:id="@+id/etData"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/data"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande">

                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude"
                    />

                <EditText
                    android:id="@+id/etlatitude"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvLatitude"
                    android:hint="@string/latitude"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande">

                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude"
                    />

                <EditText
                    android:id="@+id/etlongitude"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvLongitude"
                    android:hint="@string/longitude"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande"
                >

                <TextView
                    android:id="@+id/tvSetor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quadrante"
                    />

                <EditText
                    android:id="@+id/etSetor"
                    android:layout_toRightOf="@+id/tvSetor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/quadrante"
                    />

                <TextView
                    android:id="@+id/tvNorte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/norte"
                    android:layout_toRightOf="@id/etSetor"/>

                <EditText
                    android:id="@+id/etNorte"
                    android:layout_toRightOf="@+id/tvNorte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/norte"
                    />

                <TextView
                    android:id="@+id/tvLeste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leste"
                    android:layout_toRightOf="@id/etNorte"/>

                <EditText
                    android:id="@+id/etLeste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/leste"
                    android:layout_toRightOf="@+id/tvLeste"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem_grande"
                >

                <TextView
                    android:id="@+id/tvAltitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/altitude"
                    />

                <EditText
                    android:id="@+id/etAltitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvAltitude"
                    android:hint="@string/altitude"
                    />

                <TextView
                    android:id="@+id/tvPrecisao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/etPrecisao"
                    android:text="@string/precisao"
                    />

                <EditText
                    android:id="@+id/etPrecisao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/precisao"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

