<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/convert"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_layout"
        android:background="@color/preto">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem"
                android:background="@color/branco"
                android:columnCount="3"
                android:orientation="vertical"
                android:rowCount="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_margin="@dimen/margem"
                    android:layout_row="0"
                    android:text="@string/utmLongitude"
                    android:textSize="@dimen/fonteNormal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="1"
                    android:text="@string/quadrante"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="1"
                    android:hint="@string/strNum"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/etLetra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="1"
                    android:hint="@string/strLetra"
                    android:inputType="text"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="2"
                    android:text="@string/north"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etnorte"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="2"
                    android:hint="@string/north"
                    android:inputType="number"
                    android:singleLine="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="3"
                    android:text="@string/east"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etleste"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="3"
                    android:hint="@string/east"
                    android:inputType="number"
                    android:singleLine="true" />


                <Button
                    android:id="@+id/ib_utmlatlon"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/buttons"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_margin="@dimen/margem_grande"
                    android:layout_row="4"
                    android:background="@color/preto"
                    android:text="@string/convert_utm"
                    android:textColor="@color/branco" />

            </GridLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem"
                android:background="@color/branco"
                android:columnCount="4"
                android:orientation="vertical"
                android:rowCount="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_margin="@dimen/margem"
                    android:layout_row="0"
                    android:text="@string/latlon_decimal"
                    android:textSize="@dimen/fonteNormal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="1"
                    android:text="@string/latitude"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etlat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_columnSpan="3"
                    android:layout_margin="@dimen/margem_normal"
                    android:hint="@string/latitude"
                    android:inputType="numberDecimal|numberSigned"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteNormal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="2"
                    android:text="@string/longitude"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etlong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_columnSpan="3"
                    android:layout_margin="@dimen/margem_normal"
                    android:hint="@string/longitude"
                    android:inputType="numberDecimal|numberSigned"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteNormal" />

                <Button
                    android:id="@+id/ib_latlonutm"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/buttons"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_row="3"
                    android:layout_margin="@dimen/margem_grande"
                    android:background="@color/preto"
                    android:text="@string/convert_latlon"
                    android:textColor="@color/branco" />

            </GridLayout>

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem"
                android:background="@color/branco"
                android:columnCount="6"
                android:orientation="vertical"
                android:rowCount="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="6"
                    android:layout_margin="@dimen/margem"
                    android:layout_row="0"
                    android:text="@string/conv_gms"
                    android:textSize="@dimen/fonteNormal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="1"
                    android:text="@string/latitude"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_N"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margem_normal"
                        android:checked="true"
                        android:text="@string/N" />

                    <RadioButton
                        android:id="@+id/rb_S"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margem_normal"
                        android:text="@string/S" />
                </RadioGroup>


                <EditText
                    android:id="@+id/etLatgraus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_pequena"
                    android:layout_row="2"
                    android:hint="@string/grau"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteGrande" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="@string/simbolo_grau"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etLatminutos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_margin="@dimen/margem_pequena"
                    android:layout_row="2"
                    android:hint="@string/min"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteGrande" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:text="@string/simbolo_min"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etLatsegundos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_margin="@dimen/margem_pequena"
                    android:layout_row="2"
                    android:hint="@string/seg"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteGrande" />

                <TextView
                    android:id="@+id/tvsimlatseg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="2"
                    android:text="@string/simbolo_seg"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_normal"
                    android:layout_row="3"
                    android:text="@string/longitude"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margem_normal"
                        android:checked="true"
                        android:text="@string/E" />

                    <RadioButton
                        android:id="@+id/rb_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margem_normal"
                        android:text="@string/W" />
                </RadioGroup>

                <EditText
                    android:id="@+id/etLongraus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="@dimen/margem_pequena"
                    android:layout_row="4"
                    android:hint="@string/grau"
                    android:inputType="number"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteGrande" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:text="@string/simbolo_grau"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etLonminutos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_margin="@dimen/margem_pequena"
                    android:layout_row="4"
                    android:hint="@string/min"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteGrande" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="4"
                    android:text="@string/simbolo_min"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etLonsegundos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:layout_margin="@dimen/margem_pequena"
                    android:layout_row="4"
                    android:hint="@string/seg"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:textSize="@dimen/fonteGrande" />

                <TextView
                    android:id="@+id/tvsimlonseg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="5"
                    android:layout_row="4"
                    android:text="@string/simbolo_seg"
                    android:textSize="@dimen/fonteGrande"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ib_graus"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/buttons"
                    android:layout_column="0"
                    android:layout_columnSpan="6"
                    android:layout_margin="@dimen/margem_grande"
                    android:layout_row="5"
                    android:background="@color/preto"
                    android:text="@string/convert_gms"
                    android:textColor="@color/branco" />

            </GridLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margem">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/ibPoints"
            android:layout_width="@dimen/buttons"
            android:layout_height="@dimen/buttons"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_view_records"
            android:contentDescription="@string/pontos_marcados" />

    </RelativeLayout>

</RelativeLayout>
