<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/id_utmlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_utmlong"
        android:layout_margin="@dimen/margem"
        android:tag="UTM"
        android:layout_weight="1"
        />

    <fragment
        android:id="@+id/id_latlongutm"
        android:layout_below="@+id/id_utmlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_latlongutm"
        android:layout_margin="@dimen/margem"
        android:tag="LatitudeLongitude"
        android:layout_weight="2"
        />

    <fragment
        android:id="@+id/id_marcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_salvarponto"
        android:layout_margin="@dimen/margem"
        android:tag="@string/marcar_ponto"
        android:layout_weight="3"
        />

</LinearLayout>
